<% include ./partials/header.ejs %>
<style>
  .chat-container {
    width: 100%;
    height: 100vh;
    background-color: #181818;
    color: white;
  }

  .chat-header {
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #242424;
    border-bottom: 1px solid #333;
  }

  .chat-list {
    flex-grow: 1;
    overflow-y: auto;
    padding: 1rem;
    align-items: center;
  }

  .chat-item {
    display: flex;
    align-items: center;
    padding: 0.8rem;
    border-bottom: 1px solid #333;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .chat-item:hover {
    background-color: #2b2b2b;
  }

  .chat-item img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 1rem;
  }

  .chat-item-content {
    display: flex;
    flex-direction: column;
  }

  .chat-item-username {
    font-weight: bold;
  }

  .chat-item-last-message {
    font-size: 0.9rem;
    color: #888;
  }

  .form-section {
    margin-top: 2rem;
    padding: 1rem;
    background-color: #242424;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .form-section p {
    font-size: 1rem;
    color: #999;
  }

  .form-section input {
    width: 100%;
    padding: 0.8rem;
    margin: 1rem 0;
    border-radius: 5px;
    border: 1px solid #333;
    background-color: #2a2a2a;
    color: white;
    font-size: 1rem;
  }

  .form-section input:focus {
    outline: none;
    border-color: #007bff;
  }

  .form-section button {
    width: 100%;
    padding: 0.8rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .form-section button:hover {
    background-color: #0056b3;
  }

  .alert-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 0.375rem;
  }
</style>

<div class="chat-container">
  <div class="chat-header">
    <h1 class="text-lg font-bold">Chats</h1>
    <a
      style="color: #007bff"
      href="/feed"
      class="d-flex align-items-center text-danger text-md"
    >
      <i class="ri-arrow-left-line mr-2"></i> Back
    </a>
  </div>

  <div class="w-full mt-3 px-3">
    <div class="form-section">
      <p class="text-gray-500 mb-4">Start new conversation</p>
      <form action="/chat/start" method="POST">
        <input
          type="text"
          name="username"
          placeholder="Search users..."
          required
          value="<%= formData ? formData.username : '' %>"
        />
        <button type="submit">Start Chat</button>
        <% if (errorMessages && errorMessages[0]) { %>
        <div class="w-full text-red-500 py-2 px-4 rounded-md text-center mt-2">
          <%= errorMessages[0] %>
        </div>
        <% } %>
      </form>
    </div>
  </div>

  <hr class="mt-4 mb-1 w-full" style="border: 0.5px solid gray" />

  <div class="chat-list">
    <h2 class="text-gray-500 text-lg font-semibold mb-4">Recent Chats</h2>
    <% if (chats.length > 0) { %> <% chats.forEach(chat => { %>
    <a href="/chat/<%= chat.roomId %>" class="chat-item">
      <img
        src="/images/uploads/<%= chat.participant.picture %>"
        alt="<%= chat.participant.username %>"
      />
      <div class="chat-item-content">
        <span class="chat-item-username"><%= chat.participant.username %></span>
        <span class="chat-item-last-message">
          <% if (chat.lastMessage) { %> <%= chat.lastMessage.content %> <% }
          else { %> No messages yet <% } %>
        </span>
      </div>
    </a>
    <% }) %> <% } else { %>
    <div class="no-chats-form-container">
      <p class="text-gray-500 mb-4">No chats available.</p>
      <form action="/chat/start" method="POST">
        <input
          type="text"
          name="username"
          placeholder="Search users..."
          required
          value="<%= formData ? formData.username : '' %>"
        />
        <button type="submit">Start Chat</button>
        <% if (errorMessages && errorMessages[0]) { %>
        <div class="w-full text-red-500 py-2 px-4 rounded-md text-center mt-2">
          <%= errorMessages[0] %>
        </div>
        <% } %>
      </form>
    </div>
    <% } %>
  </div>
</div>

<% include ./partials/footer.ejs %>
